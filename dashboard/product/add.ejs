<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Product Form</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Font Awesome (optional) -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.2.1/css/all.min.css">
    <!-- Bootstrap Icons -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-icons/1.10.3/font/bootstrap-icons.min.css" rel="stylesheet">
</head>
<body>

    <form method="post" action="/dashboard/product/add" enctype="multipart/form-data" id="addProduct">
    <div class="d-flex justify-content-center align-items-center min-vh-50">
        <div class="w-50">
            <!-- File Input -->
            <input type="file" id="myFile" name="filename" class="form-control mb-3" accept="image/*">
            
            <!-- Product Name -->
            <input type="text" class="form-control mb-3" placeholder="Product Name" name="name" required/>
            
            <!-- Product Category -->
            <input type="text" class="form-control mb-3" placeholder="Product Category" name="category" required/>

            <input type="text" step="0.01" class="form-control mb-3" placeholder="Product Brand" name="brand" required/>
            
            <!-- Product Price -->
            <input type="number" step="0.01" class="form-control mb-3" placeholder="Product Price" name="price" required/>
            
            <!-- City Dropdown -->
            <div class="dropdown mb-3">
                <button class="btn btn-primary dropdown-toggle w-100" type="button" id="dropdownMenuButton1" data-bs-toggle="dropdown" aria-expanded="false">
                    Select City
                </button>
                <ul class="dropdown-menu w-100" aria-labelledby="dropdownMenuButton1">
                    <li><a class="dropdown-item" href="#">Mumbai</a></li>
                    <li><a class="dropdown-item" href="#">Bangalore</a></li>
                    <li><a class="dropdown-item" href="#">Pune</a></li>
                </ul>
            </div>
            
            <!-- Description Textarea -->
            <textarea placeholder="Description" class="form-control mb-3" name="description" rows="4" required></textarea>
            
            <!-- Submit Button -->
            <button type="submit"  class="btn btn-primary w-100 " id="addProduct" >Add Product</button>
        </div>
    </div>
</form>
    <!-- JavaScript to Handle Dropdown Selection -->
 <script>
   
document.getElementById('addProduct').addEventListener('submit',async function (event) {
    event.preventDefault();

 const form =  new FormData(this);


 try{
    const response = await fetch(this.action,{
        method:'POST',
        body:form
    })

    if(response.ok){
        alert('product added succesfully');

    }else{
        const result = await response.json();
        alert(result.message||'failed to load product')
    }
 }
 catch(error){
    console.log(error)
 }

})
 </script>

    <!-- Bootstrap JS Bundle (includes Popper) -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.3/js/bootstrap.bundle.min.js"></script>
</body>
</html>
